<div class="page-header">
  <h1>Editing User #<%= @user.id %></h1>
</div>

<% @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
        <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
<% end %>

<%= form_tag(user_url(@user), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, @user.first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, @user.last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email_address, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :email_address, @user.email_address, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :phone, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :phone, @user.phone, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email_notification, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :email_notification, 1, @user.email_notification? %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :sms_notification, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :sms_notification, 1, @user.sms_notification? %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update User", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
