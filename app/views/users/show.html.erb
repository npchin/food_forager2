<div class="page-header">
  <h1>User #<%= @user.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>First name</dt>
  <dd><%= @user.first_name %></dd>

  <dt>Last name</dt>
  <dd><%= @user.last_name %></dd>

  <dt>Email address</dt>
  <dd><%= @user.email_address %></dd>

  <dt>Phone</dt>
  <dd><%= @user.phone %></dd>

  <dt>Email notification</dt>
  <dd><%= @user.email_notification? %></dd>

  <dt>Sms notification</dt>
  <dd><%= @user.sms_notification? %></dd>

  <dt>Events Posted</dt>
   <% @events.each do |event| %>
    <dd><%= event.location %> <%= event.cuisine %> Last Updated  <%= time_ago_in_words event.last_updated %> ago</dd>
  <% end %>
</dl>
