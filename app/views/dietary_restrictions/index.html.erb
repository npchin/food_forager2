<div class="page-header">
  <h1>Dietary restrictions</h1>
</div>

<p><%= link_to 'Add a New Dietary Restriction', new_dietary_restriction_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Dietary notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dietary_restrictions.each do |dietary_restriction| %>
      <tr>
        <td><%= dietary_restriction.dietary_notes %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, dietary_restriction_url(dietary_restriction), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_dietary_restriction_url(dietary_restriction), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, dietary_restriction_url(dietary_restriction), method: 'delete', data: { confirm: "Do you really want to delete this dietary_restriction?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

