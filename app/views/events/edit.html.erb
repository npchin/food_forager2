<div class="page-header">
  <h1>Editing Event #<%= @event.id %></h1>
</div>

<%= form_tag(event_url(@event), method: 'patch', class: 'form-horizontal', :multipart => true) do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name, @event.user_id), class: 'form-control' %>

    </div>
  </div>

  <div class="form-group">
    <%= label_tag :cuisine, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :cuisine, @event.cuisine, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :location, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :location, @event.location, class: 'form-control' %>
    </div>
  </div>

  <p>
    <label>Event Photo</label>
    <%= file_field_tag :event_photo %>
  </p>


  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Event", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
